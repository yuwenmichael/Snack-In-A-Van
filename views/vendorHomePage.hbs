<section id="vendorHomePage">
    <h1>vendor Login</h1>
    <center><h5>{{message}}</h5></center>
    <form action="vendor/login" method="post" >
        <table style="margin: auto; border-spacing: 10px">
        <tr>
            <td>Van Name:</td>
            <td>
                <input style="height:26px;font-size:14pt;"type="text" id="van_name" name="van_name" placeholder="Van ID">
            </td>
            <td colspan="2"><center><button class="register-btn"><a href="vendor/register" style="color: black;">Register</a></button></center></td>
        </tr>
        <tr>
            <td>Password:</td>
            <td>
                <input style="height:26px;font-size:14pt;"type="password" id="van_password" name="van_password" placeholder="Password" >
                <i class="fas fa-eye" onclick="showhide()" id="eye"></i>
            </td>
            <td>
                <button type="submit" class="register-btn"> Confirm</button>
            </td>
        </tr>
        </table>
    </form>
    <script>
        var eye = document.getElementById("eye");
        var pwd = document.getElementById("van_password");

        function showhide(){

                if (pwd.type == "password") {
                    pwd.type = "text";
                        eye.className='fas fa-eye-slash'
                }else {
                    pwd.type = "password";
                    eye.className='fas fa-eye'
                }
        }
    </script>
</section>
